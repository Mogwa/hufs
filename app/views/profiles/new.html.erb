<%= simple_form_for @profile, url: new_profile_path, validate: true do |f| %>

  <%= f.input :name, label: "이름", error: '이름은 필수 입력 사항입니다'%>

  <%= f.input :year, label: "학번", collection: 2004..2018,  prompt: "학번을 선택하세요", error: '학번은 필수 입력 사항입니다'%>

  <%= f.input :major_id, collection: Campus.all, as: :grouped_select, group_method: :majors, prompt: "Select One", label_method: :korean, value_method: :id %>

  <%= content_tag :div, class: 'js-dependent-fields', data: { 'select-id': 'profile_year', 'option-value': "2004|2005|2006|2007|2008|2009|2010|2011|2012|2013|2014|2015|2016|2017"} do %>
    <%= f.input :minor_id, collection: Campus.all, as: :grouped_select, group_method: :minors, prompt: "Select One", label_method: :korean, value_method: :id %>
  <% end %>

  <%= content_tag :div, class: 'js-dependent-fields', data: { 'select-id': 'profile_year', 'option-value': "2018"} do %>

  <% end %>

  <%= f.input :semester, label: "등록학기", collection: 1..10, error: '등록학기는 필수 입력 사항입니다'%>
  <%= f.hidden_field :user_id, :value => current_user.id %>
  <%= f.submit class: "btn btn-secondary"%>

<% end %>