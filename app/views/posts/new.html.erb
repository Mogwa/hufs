<h1>새 게시글 작성</h1>

<%= simple_form_for @post, url: posts_path, method: :post, html: { class: 'form' }, validate: true do |f| %> 
    <%= f.hidden_field :user_id, value: current_user.id %>
    <%= f.hidden_field :type, value: @major_post %>
    <%= f.input :title, label: "제목", error: '올바른 제목을 입력해주세요' %><br>
    <%= f.input :content, label: "내용", error: '올바른 내용을 입력해주세요'  %><br>
    <%= f.submit class: "btn btn-secondary" %>
<%end%>